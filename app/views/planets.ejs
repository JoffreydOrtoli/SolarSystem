<%- include('partials/header') %>
<div id="container_pageplanetes">
    <h2 class="title_pages"><%= planet.name %></h2>
    <h3 id="dimaetre_planet">Diam√®tre : <%= planet.size %></h3>
    <div>
        <img class="imgPlanetsPage" src="/img/<%= planet.name %>.png" alt="<% planet.name %>">
        <p class="spitchPlanetsPage"><%= planet.spitch %></p>
    </div>
    <p>Source: <a href="http://www.wikipedia.org/" alt="wikipedia" target="_blank">Wikipedia</a></p>
